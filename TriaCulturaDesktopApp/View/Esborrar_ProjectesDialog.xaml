<Window x:Class="TriaCulturaDesktopApp.View.Esborrar_ProjectesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TriaCulturaDesktopApp.View"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Esborrar Projecte i Autor" Height="186.398" Width="300" Icon="/TriaCulturaDesktopApp;component/Resources/art-culture-128.png">
    <Window.Background>
        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ScrollBarColorKey}}"/>
    </Window.Background>
    <Grid>
        <Button x:Name="btn_cancel" Command="{Binding CancelCommand}" Content="Cancel·lar" HorizontalAlignment="Left" Margin="28,94,0,0" VerticalAlignment="Top" Width="98" Height="41" FontFamily="Franklin Gothic Medium" FontSize="14"/>
        <Button x:Name="btn_aceptar" Content="{Binding OkText}" Command="{Binding OkCommand}" HorizontalAlignment="Left" Margin="167,94,0,0" VerticalAlignment="Top" Width="98" Height="41" FontFamily="Franklin Gothic Medium" FontSize="14"/>
        <Label x:Name="text_Missatge" Content="Aquest Autor te projectes!"  Height="32"  FontFamily="Franklin Gothic Medium" FontSize="14" Margin="64,45,60,80"/>

    </Grid>
</Window>
